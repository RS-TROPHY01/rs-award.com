generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Role {
  name       String  @id @unique
  blogAccess Boolean
  User       User[]
}

model User {
  id        String   @id @unique
  name      String   @unique
  password  String
  role      Role[]
  blogs     Blog[]
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())
}

model Blog {
  link        String   @id @unique
  title       String
  description String
  content     String
  User        User[]
  createdAt   DateTime @default(now())
  updateAt    DateTime @default(now())
}
